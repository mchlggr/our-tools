{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@our-tools/crdt-patch": ["libs/crdt/patch/src/index.ts"],
      "@our-tools/crdt-repo": ["libs/crdt/repo/src/index.ts"],
      "@our-tools/crdt-track": ["libs/crdt/track/src/index.ts"],
      "@our-tools/edit-world": ["libs/edit/world/src/index.ts"],
      "@our-tools/editor-entity": ["libs/editor/entity/src/index.ts"],
      "@our-tools/editor-shared": ["libs/editor/shared/src/index.ts"],
      "@our-tools/editor-stage": ["libs/editor/stage/src/index.ts"],
      "@our-tools/endpoint-jsonapi": ["libs/endpoint/jsonapi/src/index.ts"],
      "@our-tools/endpoint-resource": ["libs/endpoint/resource/src/index.ts"],
      "@our-tools/endpoint-shared": ["libs/endpoint/shared/src/index.ts"],
      "@our-tools/endpoint-transform": ["libs/endpoint/transform/src/index.ts"],
      "@our-tools/extension": ["libs/extension/src/index.ts"],
      "@our-tools/tool-shared": ["libs/tool/shared/src/index.ts"],
      "@our-tools/tool-ui": ["libs/tool/ui/src/index.ts"],
      "@our-tools/view-shared": ["libs/view/shared/src/index.ts"],
      "@our-tools/view-svg": ["libs/view/svg/src/index.ts"],
      "@our-tools/view-window": ["libs/view/window/src/index.ts"],
      "@our-tools/world-doc": ["libs/world/doc/src/index.ts"],
      "@our-tools/world-shared": ["libs/world/shared/src/index.ts"],
      "@our-tools/world-store": ["libs/world/store/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

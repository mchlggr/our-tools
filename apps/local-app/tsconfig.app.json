{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ]
  },
  "exclude": [
    "src-frontend/**/*.spec.ts",
    "src-frontend/**/*.test.ts",
    "src-frontend/**/*.spec.tsx",
    "src-frontend/**/*.test.tsx",
    "src-frontend/**/*.spec.js",
    "src-frontend/**/*.test.js",
    "src-frontend/**/*.spec.jsx",
    "src-frontend/**/*.test.jsx"
  ],
  "include": ["src-frontend/**/*.js", "src-frontend/**/*.jsx", "src-frontend/**/*.ts", "src-frontend/**/*.tsx"]
}

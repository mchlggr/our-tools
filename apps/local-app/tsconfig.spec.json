{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "src-frontend/**/*.test.ts",
    "src-frontend/**/*.spec.ts",
    "src-frontend/**/*.test.tsx",
    "src-frontend/**/*.spec.tsx",
    "src-frontend/**/*.test.js",
    "src-frontend/**/*.spec.js",
    "src-frontend/**/*.test.jsx",
    "src-frontend/**/*.spec.jsx",
    "src-frontend/**/*.d.ts"
  ]
}
